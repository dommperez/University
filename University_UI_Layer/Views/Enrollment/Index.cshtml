@model IEnumerable<University_DATA_EF.Enrollment>

@{
    ViewBag.Title = "Enrollment";
}


<p style="margin-bottom: 10px;">
    @Html.ActionLink("Create New", "Create", "Enrollment", new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered" style="background-color: gray; color: white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduledClass.InstructorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </th>
        @if (User.IsInRole("Admin"))
        {
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduledClass.InstructorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.FirstName)
        </td>
        @if (User.IsInRole("Admin"))
        {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentId }, new { @class = "btn btn-warning" } ) |
            @Html.ActionLink("Details", "Details", new { id = item.EnrollmentId }, new { @class = "btn btn-info" } ) |
            @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentId }, new { @class = "btn btn-danger" } )
        </td>
        }

    </tr>
    }

</table>
