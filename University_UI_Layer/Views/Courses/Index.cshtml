@model IEnumerable<University_DATA_EF.Course>

@{
    ViewBag.Title = "Courses";
}


<p style="margin-bottom: 10px;">
    @Html.ActionLink("Create New", "Create", "Courses", new { @class="btn btn-primary"})
</p>
<p>
    @Html.ActionLink("View InActive Courses", "InActive", "Courses", new { @class = "btn btn-danger btn-sm" })
</p>
<table class="table table-bordered" style="background-color: gray; color: white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreditHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Curriculum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>*@
        @if (User.IsInRole("Admin"))
        {
            <th></th>
        }

    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreditHours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Curriculum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>*@
        @if (User.IsInRole("Admin"))
        {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }, new { @class = "btn btn-warning" } ) |
            @Html.ActionLink("Details", "Details", new { id = item.CourseId }, new { @class = "btn btn-info" } ) |
            @Html.ActionLink("Deactivate", "Delete", new { id = item.CourseId }, new { @class = "btn btn-danger" } )
        </td>
        }

    </tr>
    }

</table>
