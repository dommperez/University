@model University_DATA_EF.Course

@{
    ViewBag.Title = "";
}

@if (Model.IsActive)
{
    <h2 style="color: white">Are you sure you want to @(Model.IsActive ? "Deactivate" : "Activate") @Model.CourseName</h2>

}
else
{
    <h2 style="color: white">Are you sure you want to @(Model.IsActive ? "Deactivate" : "Activate") @Model.CourseName</h2>
}
<div>
    <hr />
    <dl class="dl-horizontal" style="color: white">
        <dt>
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreditHours)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreditHours)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Curriculum)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Curriculum)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Notes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @if (Model.IsActive)
        {
            <input type="submit" value="Deactivate" class="btn btn-danger" />
        }
        else
        {
            <input type="submit" value="Activate" class="btn btn-primary" />
        }

        @Html.ActionLink("Cancel", "Index")
    </div>
    }
</div>
